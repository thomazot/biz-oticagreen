.sharing-links
    position: relative

    &:before
        display: flex
        justify-content: center
        align-items: center
        width: 100%
        height: 50px
        border: solid 1px #f1f3f6
        border-radius: 5px
        color: color1_bg_hover
        content: 'Compartilhar'
        font-weight: medium
        font-size: 14px

    &:after
        position: absolute
        top: 100%
        left: 0
        width: 100%
        height: 10px
        background: rgba(0, 0, 0, 0)
        content: ''

    .list
        position: absolute
        top: calc(100% + 10px)
        left: 0
        visibility: hidden
        justify-content: space-between
        box-sizing: border-box
        padding: 16px
        width: 100%
        border: solid 1px #f1f3f6
        background: #fff
        opacity: 0
        transition: all .2 ease

        li
            position: static

            &:first-child:before
                position: absolute
                top: -5px
                left: 50%
                width: 10px
                height: 10px
                border-top: solid 1px #f1f3f6
                border-left: solid 1px #f1f3f6
                background: #fff
                content: ''
                transform: rotate(45deg)

    &:hover
        .list
            visibility: visible
            opacity: 1

    @media (min-width: 569px)
        .list
            width: 250px

            li
                margin-bottom: 0

            &:before
                display: none
