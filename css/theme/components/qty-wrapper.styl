.qty-wrapper
    padding: 0 10px
    min-width: 70px
    width: 70px
    height: 60px

    .input-box
        position: static
        height: 100%
        border-radius: 5px
        background: #f1f3f6

    input
        width: 100%
        height: 100% !important
        border: 0 !important
        background: none
        box-shadow: none
        color: color1_bg
        font-weight: regular
        font-size: 20px

    .bt-box
        position: static
        background: none
        box-shadow: none
        transform: none

    .plus, .less
        position: absolute
        top: 50%
        display: flex
        justify-content: center
        align-items: center
        width: 20px
        height: 20px
        border: solid 1px #fff
        border-radius: 4px
        background: #f1f3f6
        color: #999999
        text-indent: 0
        font-weight: regular
        font-size: 15px
        transform: translateY(-50%)

        span
            display: inline

        &:before
            display: none

    .plus
        right: 0

    .less
        left: 0