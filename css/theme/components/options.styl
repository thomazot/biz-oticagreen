.options
    margin-bottom: 0

    &__option
        &:last-child
            padding-bottom: 0

    &:before
        display: none

    &__caption
        display: flex
        justify-content: space-between
        color: color1_bg
        font-weight: regular
        font-size: 15px
        opacity: 1

        a
            width: 160px

    select
        padding: 0 40px 0 20px
        height: 50px
        border: solid 1px #e3e5e9
        border-radius: 4px
        background: url(down) no-repeat right 15px center
        box-shadow: none
        color: #a9a9a9
        font-weight: medium
        font-size: 15px
        appearance: none

    &-list
        position: relative

        .label
            display: flex
            align-items: center
            color: #a9a9a9
            font-weight: regular
            font-size: 15px

            .price-notice
                margin-left: 10px
                color: color1_bg

            .price
                margin-left: 3px

            &:before
                display: flex
                justify-content: center
                align-items: center
                margin-right: 10px
                width: 16px
                height: 16px
                border: solid 2px #a9a9a9
                border-radius: 50%
                color: #9cc61d
                content: ''
                font-size: 10px

        [type=radio]
            position: absolute
            top: 0
            left: 0
            width: 100%
            height: 100%
            border: 0
            background: none
            opacity: 0

            &:checked + .label
                &:before
                    icon('\f00c')

                    padding-top: 2px
                    border-color: #9cc61d
