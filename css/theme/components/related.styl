.carrossel
    overflow: hidden
    width: 100%

.related
    position: relative
    margin: 0 auto
    padding-top: 50px
    max-width: calc(100% - 32px)
    width: viewport

    &:before
        position: absolute
        top: 0
        left: 50%
        min-height: 1px
        width: 100vw
        background: #ececec
        content: ''
        transform: translateX(-50%)

    &__subtitle, &__add-checkbox
        display: none

    &__title
        margin-bottom: 30px
        color: color1_bg
        text-align: center
        font-weight: bold
        font-size: 16px