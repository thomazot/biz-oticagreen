.footer
    &-container
        background: url(footer) repeat center center

    &__title
        margin: 25px 0
        color: color1_bg_hover
        text-transform: none
        font-weight: bold
        font-size: 16px

    &__row
        margin-bottom: 0 !important

        &:first-child
            padding: 40px 0

        &--buttom
            padding: 30px 0
            background: #f5f5f5

        &--copyright
            padding: 20px 0
            background: #fff
            color: color1_bg_hover
            text-align: center
            font-weight: regular
            font-size: 12px

            .std p
                margin-bottom: 0
                line-height: 1

            .footer__box
                flex: 1
                min-width: 0

            .textblock
                width: 100%
                color: color1_bg_hover
                font-weight: regular
                font-size: 12px

    @media (max-width: 992px)
        &__title
            text-align: center

        .flex--a-center
            justify-content: center

        &__row
            &--buttom
                box-shadow: 280px 0 0 #f5f5f5, -280px 0 0 #f5f5f5

            &--copyright
                box-shadow: 280px 0 0 #fff, -280px 0 0 #fff

    @media (min-width: 993px)
        display: flex
        flex-flow: column nowrap
        min-height: 605px

        .opc &
            min-height: 0

        .pays__item
            padding-right: 0
            padding-left: 0

        &__row
            display: flex
            justify-content: space-between
            align-items: flex-start

            &:first-child
                flex: 1
                min-height: 0

                .footer__box
                    flex: 0 1 205px

                .opc &
                    .footer__box
                        &:first-child
                            flex: 1
                            min-width: 0

                        &:last-child
                            flex: 0 1 440px

            &--buttom
                margin-top: auto
                padding-top: 10px
                padding-bottom: 45px
                box-shadow: 800px 0 0 #f5f5f5, -800px 0 0 #f5f5f5

                .footer__box
                    flex: 1
                    min-width: 0

                    &:last-child
                        flex: 0 1 440px

            &--copyright
                box-shadow: 800px 0 0 #fff, -800px 0 0 #fff