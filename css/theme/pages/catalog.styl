.col-main .category-image, .category-title
    display: none

.ias-noneleft
    display: none !important

.category-image
    img
        min-width: 100%
        object-fit: cover

.category-description
    position: relative
    padding: 50px 0
    border: 0
    background: none
    font-size: 14px

    h3
        text-transform: none
        font-size: 36px
        line-height: 1

        strong
            display: block
            color: #b7e529
            font-size: 62px

    &:before
        position: absolute
        top: 0
        left: 50%
        z-index: -1
        width: 100vw
        height: 100%
        background: url(product) repeat center center
        content: ''
        transform: translateX(-50%)

.catalogsearch-result-index
    .page-title h1
        font-size: 1.5rem

        small
            margin-right: 10px
            font-size: 1rem

.catalog-category-view, .catalogsearch-result-index
    .main-container
        overflow: hidden

    @media (min-width: 993px)
        .col-main
            display: contents

        .main
            display: grid
            grid-template-areas: 'filters toolbar' 'main main' 'description description'
            grid-template-columns: 2fr 1fr

            &-container
                box-shadow: inset 0 100px 0 #f2f4f7

        .category-description
            grid-area: description

        .col-left
            margin: 0
            padding: 0
            max-width: none
            grid-area: filters

        .toolbar
            grid-area: toolbar

        .category__products
            grid-area: main

        .toolbar-bottom
            display: none
