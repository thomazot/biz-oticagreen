.checkout-cart-index
    .page-title
        h1
            text-transform: none
            font-weight: bold
            font-size: 16px

        a
            display: flex
            justify-content: center
            align-items: center
            margin: 20px 0
            height: 50px
            border-radius: 4px
            background: #f2f4f7
            color: #999999
            font-weight: bold
            font-size: 12px

.cart-table
    header
        border-radius: 5px
        background: color1_bg_hover
        text-transform: none

    main
        border: 0

    h2.name a
        color: color1_bg_hover
        text-transform: none
        font-weight: bold
        font-size: 12px

    .item-options
        display: none

    .sku
        color: #727272
        text-transform: uppercase
        font-weight: regular
        font-size: 11px

    .btn-remove
        color: #d13047
        font-size: 22px

    .cart-price
        color: #bcbcc5
        font-weight: medium
        font-size: 18px

    .product-cart-total .cart-price
        color: #b7e529

.totals
    box-shadow: none

    .title
        display: none

.totals__table
    .a-right
        &:first-child
            color: color1_bg
            font-weight: medium
            font-size: 14px

    tfoot
        .a-right
            &:first-child
                padding-top: 19px
                padding-bottom: 19px
                border-radius: 5px 0 0 5px
                background: color1_bg_hover
                color: #bcbcc5
                font-weight: medium
                font-size: 14px
                text-trasnform: uppercase

                &:before
                    content: 'TOTAL'

                strong
                    display: none

            &:last-child
                border-radius: 0 5px 5px 0
                background: color1_bg_hover
                color: #b7e529
                font-weight: bold
                font-size: 18px

.cart__boxes
    border-top: solid 1px #f1f3f6

    table
        tbody
            td:last-child
                color: #bcbcc5
                font-weight: medium
                font-size: 18px

.totals__content
    margin: 0

.cart__links
    .btn-checkout
        display: block
        width: 100%
        height: 50px
        border-radius: 5px
        background: #beff01
        box-shadow: none
        color: color1_bg_hover
        text-transform: none
        font-weight: bold
        font-size: 16px

        &:hover
            background: darken(#beff01, 20%)

@media (min-width: 993px)
    .totals
        padding-right: 0
        max-width: 235px

    .cart-table
        footer
            display: none

    .cart__links
        display: flex
        justify-content: flex-end

        .btn-checkout
            max-width: 290px

    .checkout-cart-index .page-title
        display: flex
        justify-content: space-between
        align-items: center

        a
            margin: 0
            width: 240px