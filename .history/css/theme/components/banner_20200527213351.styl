.cms-home .header-container + .banner
    margin-top: -16px

    img
        width: 100%
        height: 100%
        object-fit: cover

.banner
    img
        min-width: 100%
        object-fit: cover

.banner--nojs .banner__wrapper
    margin: -10px
    column-count: 1

    .banner
        &__item
            padding: 10px

    @media (min-width: 500px)
        column-count: 2

#banner__home_banner_mosaico
    padding-bottom: 20px

#banner__homeregua
    @extend $container

.banner-html
    background: #f9f8f8

    .slide__html
        max-height: 100%

    > a
        display: none

    img
        min-width: 0
        max-height: 90% !important
        width: auto !important
        height: auto !important
        object-fit: contain !important

    &__container
        margin: 0 auto
        max-width: calc(100% - 30px)
        width: 980px
        height: 100%

@media (min-width: 993px)
    .banner-html img
        align-self: flex-end

    .banner-html__container
        display: flex
        justify-content: space-betweenl
        align-items: stretch

    .banner-html__content
        flex: 1
        min-width: 0